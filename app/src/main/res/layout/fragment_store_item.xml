<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="217.5dp"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:scaleType="centerCrop" />

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="@null"
            android:button="@drawable/btn_store_like" />

        <ImageButton
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="12dp"
            android:background="@android:color/transparent"
            android:src="@drawable/btn_store_send" />

        <TextView
            android:id="@+id/size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:background="@drawable/bck_store_size"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingEnd="12dp"
            android:paddingStart="16dp"
            android:paddingTop="12dp"
            android:singleLine="true"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_xlarge" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="84dp"
        android:background="@android:color/white"
        android:clickable="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:maxLines="1"
            android:padding="8dp"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_large" />

        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:maxLines="1"
            android:paddingTop="10dp"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_title1" />

        <TextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:maxLines="1"
            android:paddingBottom="22dp"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/text_xsmall" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary" />

    <ImageButton
        android:id="@+id/bid"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bck_store_bid"
        android:paddingBottom="4dp"
        android:src="@drawable/ic_store_bid" />

</FrameLayout>